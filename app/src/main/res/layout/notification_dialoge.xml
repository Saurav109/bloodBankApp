<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".notification.NotificationDialog"
    android:background="@color/transparent">
    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        card_view:cardElevation="10dp"
        card_view:cardPreventCornerOverlap="false"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:background="@color/white"
            android:padding="17sp"
            android:onClick="openNotification">
            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Blood Request!!"
                android:textStyle="bold"
                android:textSize="27sp"
                android:layout_marginTop="10sp"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/notification_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textSize="23sp"
                android:layout_marginBottom="10sp"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/notification_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="23sp"
                android:layout_marginBottom="10sp"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="23sp"
                android:layout_marginBottom="10sp"/>

            <Button
                android:drawableTint="@color/colorPrimaryDark"
                android:drawableEnd="@drawable/close_icon"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/empty_blood_style"
                android:onClick="closeDialog"
                android:text="Close"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>