<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7sp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13sp"
        android:id="@+id/relative_layout_donner_view_model">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="100sp"
                android:layout_height="100sp">

                <ImageView
                    android:id="@+id/profile_picture_donner"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:src="@mipmap/profile_icon"/>
                <TextView
                    android:id="@+id/blood_group_donner_view_model"
                    android:textColor="@color/white"
                    android:background="@drawable/blood_style"
                    android:padding="7sp"
                    android:layout_margin="7sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B+"
                    android:textSize="23sp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:id="@+id/name_donner_view_model"
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/location_donner_view_model"
                    android:textSize="17sp"
                    android:text="Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/mobile_no_donner_view_model"
                    android:textSize="17sp"
                    android:text="Mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/comment_donner_view_model"
                    android:textSize="17sp"
                    android:text="Comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/call_icon_donner_view_model"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/call_icon"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>