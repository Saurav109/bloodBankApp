<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:textSize="17sp"
                android:drawableStart="@drawable/search_icon"
                android:layout_margin="7sp"
                android:background="@drawable/search_background"
                android:padding="17sp"
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_blood"
                />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7sp">

                    <TextView
                        android:padding="7sp"
                        android:textSize="17sp"
                        android:id="@+id/blood_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13sp"
                        android:text="Donors Blood Group" />

                    <TextView
                        android:padding="7sp"
                        android:textSize="17sp"
                        android:id="@+id/blood_bank_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13sp"
                        android:text="Blood Bank" />

                    <TextView
                        android:padding="7sp"
                        android:textSize="17sp"
                        android:id="@+id/profile_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13sp"
                        android:text="Donors Name" />

                    <TextView
                        android:padding="7sp"
                        android:textSize="17sp"
                        android:id="@+id/patient_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13sp"
                        android:text="Patient Name" />


                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

    </android.support.v7.widget.CardView>



    <FrameLayout
        android:id="@+id/search_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>